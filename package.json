{
  "name": "code-auditor-mcp",
  "version": "1.3.1",
  "description": "TypeScript/JavaScript code quality auditor with MCP server - Analyze code for SOLID principles, DRY violations, security patterns, and more",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "code-audit": "./dist/cli.js",
    "code-auditor-mcp": "./dist/mcp-standalone.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsx src/cli.ts",
    "dev:server": "tsx --watch src/cli.ts start --rest-api",
    "audit": "node dist/cli.js",
    "start": "node dist/mcp-standalone.js",
    "start:rest": "node dist/cli.js start --rest-api",
    "generate": "node dist/cli.js generate-config",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "audit",
    "code-quality",
    "typescript",
    "javascript",
    "analyzer",
    "solid-principles",
    "dry",
    "security",
    "linter",
    "code-review",
    "static-analysis"
  ],
  "author": "benahammond",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "flexsearch": "^0.8.212",
    "inquirer": "^9.2.15",
    "lokijs": "^1.5.12",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/lokijs": "^1.5.14",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist/**/*",
    "examples/**/*",
    "configs/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BenAHammond/code-auditor-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/code-auditor/code-auditor/issues"
  },
  "homepage": "https://github.com/code-auditor/code-auditor#readme"
}